        },
        {
          "name": "alamat_pemilik",
          "type": "string",
          "required": true,
          "label_id": "Alamat Pemilik",
          "label_en": "Owner Address"
        },
        {
          "name": "nama_penyewa",
          "type": "string",
          "required": true,
          "label_id": "Nama Penyewa",
          "label_en": "Tenant Name"
        },
        {
          "name": "nik_penyewa",
          "type": "string",
          "required": true,
          "label_id": "NIK Penyewa",
          "label_en": "Tenant ID Number",
          "pattern": "^[0-9]{16}$"
        },
        {
          "name": "alamat_penyewa",
          "type": "string",
          "required": true,
          "label_id": "Alamat Penyewa",
          "label_en": "Tenant Address"
