          "required": true,
          "label_id": "Luas Objek",
          "label_en": "Object Area"
        },
        {
          "name": "nomor_sertifikat",
          "type": "string",
          "required": true,
          "label_id": "Nomor Sertifikat",
          "label_en": "Certificate Number"
        },
        {
          "name": "jangka_waktu_sewa",
          "type": "string",
          "required": true,
          "label_id": "Jangka Waktu Sewa",
          "label_en": "Lease Duration"
