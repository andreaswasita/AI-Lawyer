        {
          "name": "pph_penjual",
          "type": "number",
          "required": true,
          "label_id": "PPh Penjual",
          "label_en": "Seller Income Tax",
          "default": 2.5,
          "unit": "percent",
          "description": "PPh Final 2.5% dari harga jual"
        },
        {
          "name": "bphtb_pembeli",
          "type": "number",
          "required": true,
          "label_id": "BPHTB Pembeli",
          "label_en": "Buyer Land/Building Acquisition Tax",
          "default": 5,
          "unit": "percent",
          "description": "BPHTB 5% dari (NJOP - NJOPTKP)"
