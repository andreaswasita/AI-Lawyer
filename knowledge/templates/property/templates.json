          "name": "cara_pembayaran",
          "type": "string",
          "required": true,
          "label_id": "Cara Pembayaran",
          "label_en": "Payment Method"
        },
        {
          "name": "jadwal_pembayaran",
          "type": "text",
          "required": true,
          "label_id": "Jadwal Pembayaran",
          "label_en": "Payment Schedule"
