          "required": true,
          "label_id": "Alamat Pengirim",
          "label_en": "Sender Address"
        },
        {
          "name": "nama_penerima",
          "type": "string",
          "required": true,
          "label_id": "Nama Penerima",
          "label_en": "Recipient Name"
        },
        {
          "name": "alamat_penerima",
          "type": "string",
          "required": true,
          "label_id": "Alamat Penerima",
          "label_en": "Recipient Address"
        },
        {
