# AI Lawyer Backend - Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=AI-Lawyer
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ailawyer
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/ailawyer

# Redis
REDIS_URL=redis://localhost:6379/0

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=indonesian_law

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Midtrans Payment Gateway (Indonesia)
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_MERCHANT_ID=your-merchant-id

# Email (SendGrid or SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@ailawyer.id
SMTP_PASSWORD=your-smtp-password

# Rate Limiting
RATE_LIMIT_FREE=5
RATE_LIMIT_STARTER=50
RATE_LIMIT_PRO=200
RATE_LIMIT_BUSINESS=1000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# Logging
LOG_LEVEL=DEBUG
