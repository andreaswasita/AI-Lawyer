<?xml version="1.0" encoding="utf-8"?>
<!--
  Azure App Service web.config for AI Lawyer Backend (FastAPI/Python)
  This file configures the IIS HttpPlatformHandler to proxy requests to Uvicorn.
  Used when deploying to Azure App Service on Windows.
  For Linux App Service, use startup.sh instead.
-->
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler"
           path="*"
           verb="*"
           modules="httpPlatformHandler"
           resourceType="Unspecified" />
    </handlers>
    <httpPlatform processPath="python"
                  arguments="-m uvicorn app.main:app --host 0.0.0.0 --port %HTTP_PLATFORM_PORT%"
                  stdoutLogEnabled="true"
                  stdoutLogFile="\\?\%home%\LogFiles\python.log"
                  startupTimeLimit="60"
                  requestTimeout="00:04:00">
      <environmentVariables>
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="APP_ENV" value="production" />
        <environmentVariable name="DEBUG" value="false" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
